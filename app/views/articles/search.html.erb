<%= stylesheet_link_tag "articles", :media => "all" %>

<div class="row">
  <div id="sidebar" class="span3">
    <h4>記事検索</h4>
    <%= form_tag :search_articles, method: :get do %>
    <%= text_field_tag :title, params[:title], :placeholder => "レポート名" %>
    <%= select_tag :theme_id, options_for_select(@themes.collect{|m| [t(m[0], :scope => 'theme.code'), m[1]]}, params[:theme_id]), :prompt => '記事のテーマ？' %>
    <%= select_tag :country_id, options_for_select(@countries.collect{|m| [t(m[0], :scope => 'country.code'), m[1]]}, params[:country_id]), :prompt => '国？' %>
    <%= select_tag :vihicle_id, options_for_select(@vihicles.collect{|m| [t(m[0], :scope => 'vihicle.code'), m[1]]}, params[:vihicle_id]), :prompt => '移動手段？' %>
    <%= select_tag :member_id, options_for_select(@members.collect{|m| [t(m[0], :scope => 'member.code'), m[1]]}, params[:member_id]), :prompt => '人数？' %>
    <%= select_tag :purpose_id, options_for_select(@purposes.collect{|m| [t(m[0], :scope => 'purpose.code'), m[1]]}, params[:purpose_id]), :prompt => '目的？' %>
    <%= select_tag :budget_id, options_for_select(@budgets.collect{|m| [t(m[0], :scope => 'budget.code'), m[1]]}, params[:budget_id]), :prompt => '予算？' %>
    <%= select_tag :language_id, options_for_select(@languages.collect{|m| [t(m[0], :scope => 'language.code'), m[1]]}, params[:language_id]), :prompt => '言語力？' %>
    <%= select_tag :age_id, options_for_select(@ages.collect{|m| [t(m[0], :scope => 'age.code'), m[1]]}, params[:age_id]), :prompt => '年齢？' %>
    <%= submit_tag "検索", :class => "btn" %>
    <% end %>
  </div>
  <div id="contents" class="span9">
    <section class="contents">
      <div class="articles-container">
        <%= render :partial => 'shared/articles/list', :locals => {:articles => @articles, :admin_page => true} %>
      </div>
    </section>
    <%= paginate(@articles) %>
  </div>
</div>

