<%= stylesheet_link_tag "report", :media => "all" %>
<div>
  <h3 class="page-title">レポート一覧</h3>
</div>
<div class="row">
  <div id="sidebar" class="span3">
    <%= render :partial => 'sidemenu' %>
  </div>
  <div id="contents" class="span9">
    <div class="chart">
      <%= high_chart("chart", @chart) %>
    </div>
    <table class="table table-bordered table-hover table">
      <thead>
        <th>ライター名</th>
        <th>全て</th>
        <th>新規</th>
        <th>リピート</th>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report[:writer_name] %></td>
            <td><%= report[:count_all] %></td>
            <td><%= report[:count_newer] %></td>
            <td><%= report[:count_repeater] %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
