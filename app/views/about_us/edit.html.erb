<%= form_for @about_us, :html => {:class => 'form-horizontal'} do |f| %>

<% if @about_us.errors.any? %>
  <div class="control-group">
    <div class="controls alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
  <% @about_us.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end -%>
    </div>
  </div>
<% end -%>

<div class="control-group">
  <%= f.label :content, '内容', :class => 'control-label'%>
  <div class="controls">
    <%= f.text_area :content, :placeholder => '内容', :rows => 6, :class => "span7", :required => "required" %>  
  </div>
</div>

<div class="control-group">
  <div class="controls">
    <%= f.submit :class => 'btn btn-inverse' %>
  </div>
</div>

<% end -%>
