<%= stylesheet_link_tag    "profiles", :media => "all" %>

<div>
  <h3>ユーザー一覧</h3>
</div>

<table id="profile-table" class="table table-bordered table-hover table">
  <thead>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>ソーシャル？写真？</th>
    <th>種別</th>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <%# profile.user.name --%>
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td>
          <% if profile.signed_by_facebook? %>
            <%= image_tag('social/facebook_16.png') %>
          <% end -%>
        </td>
        <td><%= profile.user_type %></td>
        <input type="hidden" name="profile_id" value="<%= profile.id %>" />
      </tr>
    <% end -%>
  </tbody>
</table>

<%= paginate(@profiles) %>
