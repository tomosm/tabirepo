<%= stylesheet_link_tag "profiles", :media => "all" %>
<%= form_for @profile, :html => {:class => 'form-horizontal'}, :url => {:controller => "profiles", :id => @profile.id, :action => "update"} do |f| %>

<% if @profile.errors.any? %>
  <div class="control-group">
    <div class="controls alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
  <% @profile.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end -%>
    </div>
  </div>
<% end -%>

<div class="control-group">
  <%= f.label :name, '名前', :class => 'control-label'%>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :name, :placeholder => '名前', :class => "span7", :required => "required" %>  
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :email, 'メールアドレス', :class => 'control-label'%>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :email, :placeholder => 'メールアドレス', :class => "span7", :required => "required" %>  
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :provider, 'ソーシャル', :class => 'control-label'%>
  <div class="controls string-label break-string">
    <% if @profile.signed_by_facebook? %>
      <%= link_to image_tag('social/facebook_32.png'), @profile.link, :target => "_blank" %>
    <% end -%>
  </div>
</div>

<% if @profile.admin? %>
<div class="control-group">
  <%= f.label :user_type, 'ユーザー種別', :class => 'control-label'%>
  <div class="controls string-label break-string">
    管理者
  </div>
</div>
<% end -%>

<div class="control-group">
  <%= label_tag(:bio, '自己紹介', :class => 'control-label')%>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_area :bio, :placeholder => '自己紹介', :class => "span7", :required => "required", :rows => 15 %>  
    </div>
  </div>
</div>

<div class="control-group">
  <div class="controls">
    <%= f.submit :class => 'btn btn-inverse' %>
  </div>
</div>

<% end -%>
